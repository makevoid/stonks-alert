<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Stonks Alert - Admin UI</title>
    <link rel="stylesheet" href="css/vendor/bulma.css">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <div class="container has-border">
      <section class="hero is-small is-info">
        <div class="hero-body">
          <p class="title">
            Stonks Alert
          </p>
          <p class="subtitle">
            Admin UI
          </p>
        </div>
      </section>
      <section class="section">
        <h1 class="title is-size-4">Alerts</h1>
        <section class="">

          <div class="field">
            <div class="control">
              <div class="columns">
                <div class="column is-2">
                  <strong>Ticker</strong>
                </div>
                <div class="column is-1">
                  <strong>Prices</strong>
                </div>
                <div class="column is-1">
                </div>
              </div>
            </div>
          </div>

          <!-- loop -->
          <div class="field">
            <div class="control">
              <div class="columns">
                <div class="column is-2">
                  <input class="input" type="text" placeholder="AAPL">
                </div>
                <div class="column is-1">
                  <input class="input" type="text" placeholder="123">
                </div>
                <span class="rel lh60">-</span>
                <div class="column is-1">
                  <input class="input" type="text" placeholder="234">
                </div>
                <div class="column is-3">
                  <button class="btn-add button btn is-primary">+</button>
                  <span class="del-link red">del</span>
                </div>
              </div>
            </div>
          </div>

          <div class="s15"></div>

          <div class="field is-grouped">
            <div class="control">
              <button class="button is-link">Save</button>
            </div>
          </div>

        </section>
      </section>
    </div>
  </body>
</html>
